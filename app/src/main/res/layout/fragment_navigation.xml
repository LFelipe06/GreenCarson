<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/map_searchbar_background"
        android:iconifiedByDefault="false"
        android:queryHint="Centros" />

    <ImageButton
        android:id="@+id/btnCenterMap"
        android:layout_width="67dp"
        android:layout_height="71dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="600dp"
        android:backgroundTintMode="src_in"
        android:contentDescription="@string/centrar_en_mi_ubicaci_n"
        android:src="@drawable/user_location" />

</RelativeLayout>
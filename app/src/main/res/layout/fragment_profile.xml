<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".ProfileFragment">

        <!--' hola aquí acaba la otra onda '-->

        <View
            android:id="@+id/BodyContainer"
            android:layout_width="346dp"
            android:layout_height="708dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/generalcontainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/mi_cuenta"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.249"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BodyContainer"
            app:layout_constraintVertical_bias="0.0" />

        <!--' hola aquí acaba la otra onda '-->

        <EditText
            android:id="@+id/editCorreo"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="48dp"

            android:layout_marginBottom="10dp"


            android:background="@drawable/text_field_container"
            android:drawableStart="@drawable/user_addcenter"
            android:hint="@string/correo_dominio_com"
            android:inputType="text|textEmailAddress"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewContrasena"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/textViewNombre"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="1dp"
            android:text="@string/correo"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editCorreo"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/editContrasena"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_field_container"


            android:drawableStart="@drawable/baseline_lock_24"
            android:hint="@string/contrase_a"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewNuevaContrasena"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/textViewContrasena"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/textViewNuevaContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="166dp"
            android:layout_marginBottom="10dp"
            android:text="@string/nueva_contrase_a"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editNuevaContrasena"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/editContrasena"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/editNuevaContrasena"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_field_container"


            android:drawableStart="@drawable/baseline_lock_24"
            android:hint="@string/nueva_contrase_a"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewConfirmaContrasena"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/textViewNuevaContrasena"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/textViewConfirmaContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="10dp"
            android:text="@string/confirma_nueva_contrase_a"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editConfirmaContrasena"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/editNuevaContrasena"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/editConfirmaContrasena"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/text_field_container"

            android:drawableStart="@drawable/baseline_lock_24"


            android:hint="@string/nueva_contrase_a"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/textViewConfirmaContrasena"
            tools:ignore="RtlSymmetry,TextContrastCheck" />

        <TextView
            android:id="@+id/textViewContrasena"
            android:layout_width="75dp"
            android:layout_height="19dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="208dp"
            android:layout_marginBottom="10dp"
            android:text="@string/contrase_a"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editContrasena"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/editCorreo"
            tools:ignore="TextSizeCheck,TextContrastCheck" />

        <!--' hola aquí acaba la otra onda '-->

        <!--' hola aquí acaba la otra onda '-->

        <Button
            android:id="@+id/button3"
            style="@style/Button.green"
            android:layout_width="189dp"
            android:layout_height="48dp"
            android:layout_marginStart="107dp"
            android:layout_marginEnd="107dp"
            android:text="@string/guardar_cambios"
            app:layout_constraintBottom_toBottomOf="@+id/BodyContainer"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/editConfirmaContrasena"
            app:layout_constraintVertical_bias="0.218" />

        <Button
            android:id="@+id/button2"
            style="@style/Button.green"
            android:layout_width="189dp"
            android:layout_height="40dp"
            android:layout_marginStart="107dp"
            android:layout_marginEnd="107dp"
            android:text="@string/administrar_cuentas"
            app:layout_constraintBottom_toBottomOf="@+id/BodyContainer"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintVertical_bias="0.484"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button4"
            style="@style/Button.white"
            android:layout_width="189dp"
            android:layout_height="48dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="77dp"
            android:text="@string/cerrar_sesi_n"
            app:layout_constraintBottom_toBottomOf="@+id/BodyContainer"
            app:layout_constraintEnd_toEndOf="@+id/BodyContainer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/BodyContainer"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintVertical_bias="0.083"
            tools:ignore="TextContrastCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>